{
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "nanoGPT: openwebtext/prepare.py",
            "type": "debugpy",
            "request": "launch",
            "program": "prepare.py",
            "console": "integratedTerminal",
            "args": ["trust_remote_code=True"]
        },
        {
            "name": "nanoGPT: bench.py CPU config",
            "type": "debugpy",
            "request": "launch",
            "program": "bench.py",
            "console": "integratedTerminal",
            "args": [
                "--device=cpu",
                "--compile=False",
                "--real_data=True"
            ]
        },
        {
            "name": "nanoGPT: train.py shakespeare_char CPU config",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": [
                "config/train_shakespeare_char.py",
                "--device=cpu",
                "--compile=False",
                "--max_iters=2000",
                "--lr_decay_iters=2000",
                "--eval_iters=100",
                "--dropout=0.2"
            ]
        }
    ]
}